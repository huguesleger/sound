{% extends ':back:templateAdmin.html.twig' %}

{% block content %}
   <div class="row">  
   <div class="col-md-6 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                    <h2>Sound creation</h2>
                    <a class="btn btn-dark btn-xs title-add" href="{{ path('sound_index') }}">Back to the list</a>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <br>
                   {{ form_start(form) }}
                    {{ form_errors(form) }}
                           {{ form_row(form.titre) }}
                      
                           {{ form_row(form.description) }}
                     
         <div class="form-group"><label>Année de création</label>{{form_widget(form.annee)}}<span class="fa fa-calendar-o form-control-feedback left"></span></div>

                    
                           {{ form_row(form.auteur) }}
                           
         <label>Musique</label>             
        <div class="form-upload">
      <label for="appbundle_sound_morceau" class="input-label">
          <i class="fa fa-upload"></i>Select fichier</label>
          {{form_widget(form.morceau)}}
          <span id="selectName">Aucun fichier choisi</span>      
         </div>            
              </div>
            </div>
   </div>
                         

      <div class="col-md-6 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Vignette</h2>
                 <ul class="nav navbar-right panel_toolbox">
                    
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                  </ul>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <br>
 
      <label for="appbundle_sound_image" class="input-label">
          <i class="fa fa-upload"></i>Select fichier</label>
          {{form_widget(form.image)}}
     
       
                <img class="default-picture" id="selectImage" src="{{asset('images/pochette-disc.png')}}" alt="your image" />
     </div>
            </div>
      </div>
                         
                <div class="col-md-6 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Options</h2>
                 <ul class="nav navbar-right panel_toolbox">
                    
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                  </ul>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <br>
                  
                            {{ form_row(form.labeliser) }}
                            {{ form_row(form.nonLabeliser) }}
                           
                            <div class="ln_solid"></div>
                               
                            {{ form_row(form.publier) }}

                </div>
              </div>
                            
                                   
                            <div class="form-group btn-right">
                        <button type="submit" class="btn btn-success">Enregistrer</button>
                      </div>


            </div>
          
          
       </div>
 {{ form_end(form) }}

    

