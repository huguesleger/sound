                           {{ form_row(form.linkDeezer)}}
                           {{ form_row(form.genre)}}
                          
                            <div class="ln_solid"></div>
                               
                            
                            {{ form_row(form.publier) }}

                </div>
              </div>
                         
                                   
                            <div class="form-group btn-right">
                        <button type="submit" class="btn btn-success"><i class="fa fa-download" aria-hidden="true"></i>Enregistrer</button>
                      </div>


            </div>
          
          
       </div>
 {{ form_end(form) }}

    

