       <div class="">
           
           
           
          <div class="page-title">
            <div class="title_left">
                <h3>Musique</h3>
            </div>
               <span class="btn-title-left col-md-2"><a class="btn btn-dark btn-sm" href="{{ path('sound_new') }}">Ajouter</a></span>

       </div>
          <div class="clearfix"></div>

 
          
                <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Mes Musiques</h2>
                  
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                 
                  <table id="datatable" class="table table-striped projects">
                    <thead>
                      <tr>
                        <th style="width: 1%">#</th>
                        <th style="width: 12%">Genre</th>
                        <th style="width: 20%">Titre</th>
                        <th>Description</th>
                        <th>Label</th>
                        <th>Auteur</th>
                        <th>Status</th>
                        <th style="width: 20%">Actions</th>
                      </tr>
                    </thead>


                    <tbody>
                        {% for sound in sounds %}
                      <tr>  
                           <td> {% set counter = ( counter | default(0) ) + 1 %}
                           <small> {{ counter }}</small></td>
                        <td>
                            
                            {% for sound in sound.genre %}
                              <span type="button" class="label label-genre">{{sound.nom }}</span>
                           {% endfor %}
                         </td>
                        <td><a>{{ sound.titre }}</a>
                        <br />
                          <small>Créer le {{ sound.date|date ('j/m/y à H:i:s') }}</small></td>
                        <td>{{ sound.description|truncate(50, true, ' ...')  }}</td>
                    
                        <td>{% if sound.label %}<span type="button" <i class="fa fa-check-circle txt-success" aria-hidden="true"></i></span>{% else %}<span><i class="fa fa-times-circle txt-danger" aria-hidden="true"></i></span>{% endif %}</td>
                         <td>{{ sound.auteur }}</td>
                        <td> {% if sound.publier %}<span type="button" class="label label-success">Publié</span>{% else %}<span class="label label-warning">Brouillon</span>{% endif %}</td>
                        <td><a href="{{ path('sound_show', { 'id': sound.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                          <a href="{{ path('sound_edit', { 'id': sound.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                          <a href="{{ path('sound_delete', { 'id': sound.id }) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a></td>
                      </tr>
                       {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

                </div>
                    
                   </div>   
                       
                
{% endblock %}

{% block scriptForm %}
{#     <script type="text/javascript" src="{{asset('js/backend/form/form_notification.js')}}"></script>#}
      <script type="text/javascript" src="{{asset('js/backend/form.js')}}"></script>

{% endblock %}



