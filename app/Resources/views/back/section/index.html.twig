           {% for sectionName in sectionNames  %}
               {% set counter = ( counter | default(0) ) + 1 %}
               {% if sectionName and counter == 1 %}
                   
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="btn-section-add">
            <small class="name-section-create">Section</small>
           <h2 class="txt-bold">{{sectionName.name }}<i class="fa fa-grav blue" aria-hidden="true"></i></h2>
            <span class="btn-title-left"><a class="btn btn-dark btn-sm" href="{{ path('present_new') }}">Ajouter</a></span>
             </div>
                   </div>
          {% endif %}
          
        
           {% if sectionName and counter == 2 %}
               <div class="col-md-4 col-sm-4 col-xs-12">
                   <div class="btn-section-add">
             <small class="name-section-create">Section</small>
           <h2 class="txt-bold">{{sectionName.name }}<i class="fa fa-th blue" aria-hidden="true"></i></h2>
            <span class="btn-title-left"><a class="btn btn-dark btn-sm" href="{{ path('service_new') }}">Ajouter</a></span>
            </div>
               </div>
               {% endif %}
             {% if sectionName and counter == 3 %}
                   <div class="col-md-4 col-sm-4 col-xs-12">
                       <div class="btn-section-add">
              <small class="name-section-create">Section</small>
            <h2 class="txt-bold">{{sectionName.name }}<i class="fa fa-info-circle blue" aria-hidden="true"></i></h2>
            <span class="btn-title-left"><a class="btn btn-dark btn-sm" href="{{ path('promotion_new') }}">Ajouter</a></span>
             </div>
                   </div>
            {% endif %}
            
            {% endfor %}
 
          <div class="clearfix"></div>

 
          
                <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Mes Sections</h2>
                  
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                 
                  <table class="table table-striped projects">
                    <thead>
                      <tr>
                        <th style="width: 1%">#</th>
                        <th style="width: 12%">Section</th>
                        <th style="width: 20%">Image</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th style="width: 20%">Actions</th>
                      </tr>
                    </thead>


                    <tbody>
                        {% for present in presents[0:]  %}

                            {% if loop.index >= 2 and present.publier >=2 %}<tr class="alert-dark">{% else %}<tr> {% endif %}  
                           <td class="icon-section"><i class=" {% if loop.index >= 2 and present.publier >=2 %}fa fa-grav white {% else %}fa fa-grav blue{% endif %}" aria-hidden="true"></i></td>
                        <td>{{present.name }}<br/>
                          <small>Créer le {{ present.date|date ('j/m/y à H:i:s') }}</small></td>
                        {% if present.image !=null %}
                        <td><img src="{{asset('uploads/image/')~present.image}}" class="avatar"></td>
                       {% else %}
                       <td><img src="{{asset('images/pochette-disc.png')}}" class="avatar"><small class="col-md-6 ">image par defaut</small></td>
                        {% endif %}
                        <td>{{ present.texte|truncate(80, false, ' ...') }}</td>
                    
                        <td>{% if present.publier %}<span type="button" class="label label-success">Publié</span>{% else %}<span class="label label-warning">Brouillon</span>{% endif %}</td>
                        <td><a href="{{ path('present_show', { 'id': present.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                          <a href="{{ path('present_edit', { 'id': present.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                          <a href="{{ path('present_delete', { 'id': present.id }) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a></td>
                      </tr>
                       {% endfor %}
                       
                        {% for service in services  %}
                      <tr>  
                           <td class="icon-section"><i class="fa fa-th blue" aria-hidden="true"></i></td>
                        <td>{{service.name }}<br/>
                          <small>Créer le {{ service.date|date ('j/m/y à H:i:s') }}</small></td>
                        <td><img src="{{asset('images/item/')~service.icon~'.png'}}" class="avatar"><small class="col-md-6">{{service.icon}}</small></td>
                        <td>{{ service.description|truncate(80, true, ' ...') }}</td>
                    
                        <td> {% if service.publier %}<span type="button" class="label label-success">Publié</span>{% else %}<span class="label label-warning">Brouillon</span>{% endif %}</td>
                        <td><a href="{{ path('service_show', { 'id': service.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                          <a href="{{ path('service_edit', { 'id': service.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                          <a href="{{ path('service_delete', { 'id': service.id }) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a></td>
                      </tr>
                       {% endfor %}
                           
                         {% for promotion in promotions  %}
                      <tr>  
                            {% if loop.index >= 2 and promotion.publier >=2 %}<tr class="alert-dark">{% else %}<tr> {% endif %}  
                           <td class="icon-section"><i class=" {% if loop.index >= 2 and promotion.publier >=2 %}fa fa-th white {% else %}fa fa-th blue{% endif %}" aria-hidden="true"></i></td>
                        <td>{{promotion.name }}<br />
                         <small>Créer le {{ promotion.date|date ('j/m/y à H:i:s') }}</small></td>
                        <td><img src="{{asset('uploads/image/')~promotion.image}}" class="avatar"></td>
                        <td>{{ promotion.texte }}</td>
                    
                        <td> {% if promotion.publier %}<span type="button" class="label label-success">Publié</span>{% else %}<span class="label label-warning">Brouillon</span>{% endif %}</td>
                        <td><a href="{{ path('promotion_show', { 'id': promotion.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                          <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                          <a href="{{ path('promotion_delete', { 'id': promotion.id }) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a></td>
                      </tr>
                       {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

                </div>
                   
                   </div>   
                       
                
{% endblock %}

