{% extends ':back:templateAdmin.html.twig' %}

  {% block content %}
    <h1>Production</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ production.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ production.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ production.texte }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('production_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('production_edit', { 'id': production.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
