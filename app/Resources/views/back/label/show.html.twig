{% extends ':back:templateAdmin.html.twig' %}

  {% block content %}
    <h1>Label</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ label.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ label.nom }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('label_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('label_edit', { 'id': label.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
