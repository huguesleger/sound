{% extends ':back:templateAdmin.html.twig' %}

  {% block content %}
    <h1>Header</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ header.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ header.image }}</td>
            </tr>
            <tr>
                <th>Isdefault</th>
                <td>{% if header.styleDefault %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('header_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('header_edit', { 'id': header.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
