    {% extends ':back:templateAdmin.html.twig' %}

        {% block content %}

            <div class="row">  
                <div class="col-md-6 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Section édition</h2>
                            <a class="btn btn-dark btn-xs back-list" href="{{ path('section_index') }}"><i class="fa fa-reply" aria-hidden="true"></i>Retour sections</a>
                            <div class="clearfix"></div>
                        </div>
                            
                        <div class="x_content">
                        <br>
                            {{ form_start(edit_form) }}

                            {{ form_row(edit_form.name) }}
                            {{ form_row(edit_form.texte) }}

                            <div class="ln_solid"></div>

                            {{ form_row(edit_form.publier) }}
                        </div>
                        <div class="form-group btn-right">
                            <button type="submit" class="btn btn-success"><i class="fa fa-upload" aria-hidden="true"></i>Mettre à jour</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Image</h2>
                            <small class="right-pos"> * formats autorisés jpg/png</small>
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="x_content">
                            <br>
                            <label for="appbundle_present_image" class="input-label">
                            <i class="fa fa-upload"></i>Select fichier</label>

                            {{form_widget(edit_form.image)}}
                            <p><small>* format optimal: 160px X 160px</small></p>
                            <p><small>* taille max: 150 Ko</small></p>

                            {% if present.image != null%}
                            <img id="selectImage" src="{{asset('uploads/image/')~present.image}}" alt="your image" />
                            {% else %}
                            <img class="default-picture" id="selectImage" src="{{asset('images/image_default.png')}}" alt="your image" />
                            {% endif %}
                        </div>
                        
                    </div>
                </div>
            </div>

        {{ form_end(edit_form) }}
        {% endblock %}

