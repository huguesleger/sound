   <div class="col-md-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Section détail</h2>
                   <a class="btn btn-dark btn-xs back-list" href="{{ path('section_index') }}"><i class="fa fa-reply" aria-hidden="true"></i>Retour sections</a>
                  <div class="clearfix"></div>
                </div>

                <div class="x_content">

                  <!-- start project-detail sidebar -->
                  <div class="col-md-5 col-sm-3 col-xs-12">

                    <section class="panel">

                      <div class="panel-body">
                        <h3 class="green"><i class="fa fa-grav"></i>{{ present.name }}</h3>
                        <br>
                        <p>{{ present.texte }}</p>
                        <br>
                        
                    {% if present.image != null%}
                         <p>Votre image</p>
                        <br>
                         <div class="col-md-12 padd-b-md">
                  <img src="{{asset('uploads/image/'~present.image)}}" alt="{{present.name}}" class="col-md-6"/>
                  
                         </div>
                  {% else %}
                      <p>Image par defaut</p>
                  <img src="{{asset('images/pochette-disc.png')}}" alt="icon">
                  {% endif %}
                        <br>
                        <h5>Info</h5>
                        <ul class="list-unstyled project_files">
                          <li><i class="fa fa-calendar-o"></i>crée le {{ present.date|date ('j/m/y à H:i:s')  }}</a>
                          </li>
                          <li><i class="fa fa-picture-o"></i>{% if present.image != null%}{{ present.image }} {% else %}pochette-disc.png{% endif %}
                          </li>
                          <li>{% if present.publier %}<i class="fa fa-check-square-o"></i>Publier: oui{% else %}<i class="fa fa-square-o"></i>Publier: non{% endif %}
                          </li>
                        </ul>
                        <br>

                        <div class="mtop20">
                         {% if present.publier == 0%}
                          <a href="{{path("publier_present",{"id":present.id})}}" class="btn btn-sm btn-success">Publier</a>
                          {% else %}
                           <a href="{{path("publier_present",{"id":present.id})}}" class="btn btn-sm btn-warning">Brouillon</a>   
                          {% endif %}
                          <a href="{{ path('present_edit', { 'id': present.id }) }}" class="btn btn-sm btn-info">Editer</a>
                          <a href="{{ path('present_delete', { 'id': present.id }) }}" class="btn btn-sm btn-danger">Supprimer</a>
