{% extends ':back:templateAdmin.html.twig' %}

  {% block content %}
    <h1>Present</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ present.id }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ present.texte }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ present.image }}</td>
            </tr>
            <tr>
                <th>Publier</th>
                <td>{% if present.publier %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('section_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('present_edit', { 'id': present.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
