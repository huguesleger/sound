    {% extends ':back:templateAdmin.html.twig' %}

        {% block content %}

            <div class="row">  
                <div class="col-md-6 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Section création</h2>   
                            <a class="btn btn-dark btn-xs back-list" href="{{ path('section_index') }}"><i class="fa fa-reply" aria-hidden="true"></i>Retour sections</a>
                            <div class="clearfix"></div>
                        </div>
                            
                    <div class="x_content">
                    <br>
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    {{ form_row(form.name) }}
                    {{ form_row(form.texte) }}
                    <div class="ln_solid"></div>
                    {{ form_row(form.publier) }}
                    </div>
                    
                        <div class="form-group btn-right">
                            <button type="submit" class="btn btn-success"><i class="fa fa-download" aria-hidden="true"></i>Enregistrer</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                        <h2>Image</h2>
                        <small class="right-pos"> * formats autorisés jpg/png</small>
                        <div class="clearfix"></div>
                        </div>
                        
                        <div class="x_content">
                            <br>
                            <label for="appbundle_present_image" class="input-label">
                            <i class="fa fa-upload"></i>Select fichier</label>
                            {{form_row(form.image)}}
                            <p><small>* format optimal: 160px X 160px</small></p>
                            <p><small>* taille max: 150 Ko</small></p>
                            <img class="default-picture" id="selectImage" src="{{asset('images/image_default.png')}}" alt="your image" />
                        </div>
                    </div>
                </div> 
            </div>
            
        {{ form_end(form) }}
        {% endblock %}
