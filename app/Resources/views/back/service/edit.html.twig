    {% extends ':back:templateAdmin.html.twig' %}

        {% block content %}   

            <div class="row">  
                <div class="col-md-6 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                        <h2>Section édition</h2> 
                        <a class="btn btn-dark btn-xs back-list" href="{{ path('section_index') }}"><i class="fa fa-reply" aria-hidden="true"></i>Retour sections</a>
                        <div class="clearfix"></div>
                        </div>
                        
                        <div class="x_content">
                            <br>
                            {{ form_start(edit_form) }}

                            {{ form_row(edit_form.name) }}
                            {{ form_row(edit_form.titre) }}
                            {{ form_row(edit_form.description) }}
                            {{ form_row(edit_form.icon) }}
                            <div class="ln_solid"></div>
                            {{ form_row(edit_form.publier) }}
                        </div>
                        
                        <div class="form-group btn-right">
                            <button type="submit" class="btn btn-success"><i class="fa fa-upload" aria-hidden="true"></i>Mettre à jour</button>
                        </div>
                    </div>
                </div>
                        
                <div class="col-md-6 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Icon disponible</h2>   
                            <div class="clearfix"></div>
                        </div>

                            <div class="x_content">
                                <div class="bs-docs-section">
                                    <div class="bs-glyphicons">
                                        <ul class="bs-glyphicons-list">
                                        {% for icon in icons %}
                                            <li>
                                            <span class="glyphicon"><img src="{{asset('images/item/')~icon.nom~'.png'}}"></span>
                                            <span class="glyphicon-class">{{ icon.nom }}</span>
                                            </li>
                                        {% endfor %}
                                        </ul>
                                    </div>
                                </div> 
                            </div>
                        
                    </div>
                </div>
            </div>
                                        
      {{ form_end(edit_form) }}
      {% endblock %}

