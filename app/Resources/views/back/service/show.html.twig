    {% extends ':back:templateAdmin.html.twig' %}

        {% block content %}

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Section détail</h2>
                            <a class="btn btn-dark btn-xs back-list" href="{{ path('section_index') }}"><i class="fa fa-reply" aria-hidden="true"></i>Retour sections</a>
                            <div class="clearfix"></div>
                        </div>
                        
                        <div class="x_content">
                            <!-- start project-detail sidebar -->
                            <div class="col-md-5 col-sm-12 col-xs-12">
                                <section class="panel">
                                    <div class="panel-body">
                                        <h3 class="green"><i class="fa fa-grav"></i>{{ service.name }}</h3>
                                        <br>
                                        <img src="{{asset('images/item/')~service.icon~'.png'}}" class="item-icon img-responsive">
                                        <h4 class="title-item text-left">{{service.titre}}</h4>
                                        <p>{{service.description}}</p>      
                                        <br>
                                        <h5>Info</h5>
                                    
                                        <ul class="list-unstyled project_files">
                                            <li><i class="fa fa-calendar-o"></i>crée le {{ service.date|date ('j/m/y à H:i:s')  }}</a>
                                            </li>
                                            <li><i class="fa fa-picture-o"></i>{{service.icon~'.png' }}
                                            </li>
                                            <li>{% if service.publier %}<i class="fa fa-check-square-o"></i>Publier: oui{% else %}<i class="fa fa-square-o"></i>Publier: non{% endif %}
                                            </li>
                                        </ul>
                                        <br>
                                    
                                        <div class="mtop20">
                                            {% if service.publier == 0%}
                                            <a href="{{path("publier_service",{"id":service.id})}}" class="btn btn-sm btn-success">Publier</a>
                                            {% else %}
                                            <a href="{{path("publier_service",{"id":service.id})}}" class="btn btn-sm btn-warning">Brouillon</a>   
                                            {% endif %}
                                            <a href="{{ path('service_edit', { 'id': service.id }) }}" class="btn btn-sm btn-info">Editer</a>
                                            <a data-toggle="modal" href="#SuppService_{{ service.id }}" class="btn btn-danger btn-sm" id="SuppService"><i class="fa fa-trash-o no-mg-right"></i> Supprimer </a>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <!-- end project-detail sidebar -->
                            </div>
                    </div>
                </div>
                
                <div class="x_content">
                    <div class="modal fade bs-example-modal-lg" id="SuppService_{{ service.id }}" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">

                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Suppression</h4>
                                </div>
                                
                                <div class="modal-body">
                                    Vous êtes sûr de vouloir supprimer cet élément ?
                                </div>
                                
                                <div class="modal-footer">
                                    <ul class="modal-btn">
                                        <li><a class="btn btn-primary btn-sm" data-dismiss="modal"><i class="fa fa-trash-o no-mg-right"></i> Non </a></li>
                                        <li><a href="{{ path('service_delete', { 'id': service.id }) }}" class="btn btn-success btn-sm"><i class="fa fa-trash-o no-mg-right"></i> Oui </a></li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>                      
            </div>

        {% endblock %}

