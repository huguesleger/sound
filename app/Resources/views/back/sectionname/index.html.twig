{% block content %}
      
       <div class="">
           
           
           
          <div class="page-title">
            <div class="title_left">
                <h3>Nom Section</h3>
                 </div>
              
                               <span class="btn-title-left col-md-2">
                   <a class="btn btn-dark btn-sm" id="AddSectionName">Ajouter</a>
                   {{ render(controller('AppBundle:SectionName:new')) }}</span>

                    

       </div>
          <div class="clearfix"></div>

 
          
                <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_content">
                 
                  <table class="table table-striped projects" id="Section-title">
                    <thead>
                      <tr>
                        <th style="width: 5%">#</th>
                        <th style="width: 20%">Date</th>
                        <th style="width: 30%">Nom</th>
                        <th style="width: 20%">Actions</th>
                      </tr>
                    </thead>


                    <tbody>
                        {% for sectionName in sectionNames %}
                      <tr>  
                           <td> {% set counter = ( counter | default(0) ) + 1 %}
                           <small> {{ counter }}</small></td>
                       {#<td><i class="fa fa-list" aria-hidden="true"></i></td>#}
                        <td><small>Créer le {{ sectionName.date|date ('j/m/y à H:i:s') }}</small></td>  
                        <td><a>{{ sectionName.name }}</a></td>
                        {#<td><a href="{{ path('sectionname_show', { 'id': sectionName.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>#}
                        <td><a href="{{ path('sectionname_edit', { 'id': sectionName.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil-square-o no-mg-right"></i> Editer </a>
                         <a data-toggle="modal" href="#SuppTitle_{{ sectionName.id }}" class="btn btn-danger btn-xs"id="SuppTitleSection"><i class="fa fa-trash-o no-mg-right"></i> Supprimer </a></td>
                      </tr>
                       {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
                    {% for sectionName in sectionNames %}
                      <div class="x_content">
  <div class="modal fade bs-example-modal-lg" id="SuppTitle_{{ sectionName.id }}" tabindex="-1" role="dialog" aria-hidden="true">
                  <div class="modal-dialog modal-sm">
                    <div class="modal-content">

                      <div class="modal-header">
                         <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span></button>
                        <h4 class="modal-title" id="myModalLabel">Suppression</h4>
                      </div>
                      <div class="modal-body">
                         Vous êtes sûr de vouloir supprimer cet élément ?
                      </div>
                      <div class="modal-footer">
                          <ul class="modal-btn">
                              <li><a class="btn btn-primary btn-sm" data-dismiss="modal"><i class="fa fa-trash-o no-mg-right"></i> Non </a></li>
                              <li><a href="{{ path('sectionname_delete', { 'id': sectionName.id }) }}" class="btn btn-success btn-sm"><i class="fa fa-trash-o no-mg-right"></i> Oui </a></li>
                          </ul>
                      </div>

                    </div>
                  </div>
                </div>
                      </div>
                    {% endfor %}
                </div>
                    
                   </div>   
                       
                
